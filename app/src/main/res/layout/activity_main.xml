<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.lucky.demo.data.room.RoomEntity.User" />

        <variable
            name="book"
            type="com.lucky.demo.data.room.RoomEntity.Book" />

        <variable
            name="statInfo"
            type="java.util.Map" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.name}"
                tools:text="用户昵称" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{book.name}"
                tools:text="单词书书名" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(book.wordCount)}"
                tools:text="单词书单词数" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(statInfo.doneCount)}"
                tools:text="已砍单词数" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(statInfo.doingCount)}"
                tools:text="学习中单词数" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(statInfo.bookDoneCount)}"
                tools:text="单词书-已砍单词数" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(statInfo.bookDoingCount)}"
                tools:text="单词书-学习中单词数" />

        </LinearLayout>

    </RelativeLayout>

</layout>